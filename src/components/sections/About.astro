---
import {
  TitleSection,
  SubtitleSection,
  Section,
  SkillsColumn
} from "../../components/ui";
import { skills } from "../../constants/skills";
import { useTranslations } from "src/i18n/utils";
import { languages } from "src/i18n/ui";
const currentLang = Astro.currentLocale
const t = useTranslations(currentLang as keyof typeof languages)
---

<Section id="about" className="mb-14 md:mb-20">
  <TitleSection
    title={t('about.title')}
  />
  <div class="w-24 h-px bg-gray-700 mx-auto"></div>
</Section>
<Section>
  <article class="grid md:grid-cols-2 gap-12 items-center justify-center">
    <section class="prose">
      <h2
        class="text-2xl font-light text-text-primary mb-6"
      >
        {t('about.hello')}, Soy Armando ðŸ‘‹
      </h2>
      <p
        class="font-normal text-text-secondary leading-relaxed"
      >
        {t('about.description.header')}
        <p
          class="font-normal text-text-secondary leading-relaxed"
        >
          {t('about.description.footer')}
        </p>
      </p>
    </section>
    <section class="flex justify-center">
      <figure
        class="size-64 bg-white/5 backdrop-blur-sm border-white/10 border rounded-2xl flex items-center justify-center"
      >
        <img
          loading="lazy"
          src="/avatar.webp"
          alt="Jose Armando Crescencio"
          class="size-56 object-cover rounded-xl"
        />
      </figure>
    </section>
  </article>
</Section>
{/* Skills */}
<Section>
  <SubtitleSection title={t('about.skills.title')} />
  <article class="grid md:grid-cols-3 gap-8">
    <SkillsColumn
      skills={skills.frontend}
      titleSection="Frontend"
      className="bg-info/10 text-info border border-info/30"
    />
    <SkillsColumn
      skills={skills.backend}
      titleSection="Backend"
      className="bg-success/10 text-success border border-success/30"
    />
    <SkillsColumn
      skills={skills.tools}
      titleSection="Tools"
      className="bg-gray-600/10 text-gray-300 border border-gray-300/30"
    />
  </article>
</Section>
