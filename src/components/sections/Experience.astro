---
import { toCodes } from "astro:i18n";
import { ExperienceTimeline, Section, TitleSection } from "../ui";
import { useTranslations } from "src/i18n/utils";
import { languages } from "src/i18n/ui";
const currentLang = Astro.currentLocale
const t = useTranslations(currentLang as keyof typeof languages)
---

<Section id="experience" className="mb-14 md:mb-20">
  <TitleSection title={t('experience.title')} />
  <div class="w-24 h-px bg-gray-700 mx-auto"></div>
</Section>
<Section>
  <ExperienceTimeline />
</Section>