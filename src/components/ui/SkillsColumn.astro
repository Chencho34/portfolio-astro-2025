---
import type { Skill } from '../../types/skills'

interface Props {
  skills: Skill[]
  titleSection: string
  className?: string
}

const { skills, titleSection, className } = Astro.props
---

<section class="group border bg-white/5 backdrop-blur-sm border-white/10 transition-all duration-300 hover:scale-[1.02] hover:shadow-2xl hover:shadow-sky-500/10 rounded-xl overflow-hidden p-4">
  <h3 class="text-xl text-center font-medium text-text-primary mb-6">
    { titleSection }
  </h3>
  <main>
    <div class="flex flex-wrap gap-3">
      {skills.map((skill: Skill) => (
        <div
          class={`flex flex-1 justify-center items-center gap-2 p-3 rounded-lg  hover:bg-accent/10 transition-colors duration-300 ${className}`}
        ><span>
          
            <skill.icon class:list={'size-7'}/>
        </span>
          <span class="text-sm font-medium text-card-foreground">{skill.name}</span>
        </div>
      ))}
    </div>
  </main>
</section>
