---
import { experience } from "../../constants/experience"
---
<div class="space-y-6">
  {
    experience.map((job) => {
      const { company, description, period, title } = job
      return (
      <div class="border-l-2 border-gray-700 pl-8 relative">
        <div class="absolute w-4 h-4 bg-gray-600 rounded-full -left-[9px] top-2"></div>
        <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-2">
          <h3 class="text-xl font-medium text-accent">{title}</h3>
          <span class="text-sm text-gray-400 font-medium">{period}</span>
        </div>
        <p class="text-gray-300 font-medium mb-2">{company}</p>
        <p class="text-gray-400 leading-relaxed">{description}</p>
      </div>
      )
    })
  }
</div>