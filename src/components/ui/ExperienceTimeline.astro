---
import { experience } from "../../constants/experience"
import { ExternalLink } from "../icons/contact"
import Badge from "./Badge.astro"
---
<div class="space-y-6">
  {
    experience.map((job) => {
      const { company, description, period, title } = job
      return (
        <div class="border-l-2  pb-2.5 border-gray-700 pl-8 relative">
          <div class="absolute w-4 h-4 bg-gray-600 rounded-full -left-[9px] top-2"></div>
          <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-1">
            <h3 class="text-xl font-medium text-text-primary">{title}</h3>
            <span class="text-sm text-text-secondary font-medium">{period}</span>
          </div>
          <a href="https://kyoshi.com.mx/" class=" inline-flex gap-1 text-accent  hover:underline underline-offset-4 font-medium mb-2">
            {company}
            <ExternalLink class:list={"size-5"}/>
          </a>
          <p class="text-gray-400 leading-relaxed mb-4">
            {exp.map((item) => (
              <ul class="mb-1 text-gray-400 text-pretty text-sm md:text-base">‚óè {item}</ul>
            ))}
          </p>
          <div class="flex flex-wrap gap-2  mt-4">
            {
              tecnologies?.map((tech) => (
                <Badge
                  variant="subtle" 
                >
                  {tech}
                </Badge>

              ))
            }
          </div>
        </div>
        <p class="text-gray-300 font-medium mb-2">{company}</p>
        <p class="text-gray-400 leading-relaxed">{description}</p>
      </div>
      )
    })
  }
</div>