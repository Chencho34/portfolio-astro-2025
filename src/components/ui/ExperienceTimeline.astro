---
import { experience } from "../../constants/experience"
import ExternalLink from "../icons/contact/ExternalLink.astro"
---
<div class="space-y-6">
  {
    experience.map((job) => {
      const { company, description, period, title, tecnologies, exp } = job
      return (
      <div class="border-l-2 border-gray-700 pl-8 relative">
        <div class="absolute w-4 h-4 bg-gray-600 rounded-full -left-[9px] top-2"></div>
        <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-2">
          <h3 class="text-xl font-medium text-gray-400">{title}</h3>
          <span class="text-sm text-gray-400 font-medium">{period}</span>
        </div>
        <a href="#" class="flex gap-1 text-accent  hover:underline underline-offset-4 font-medium mb-2">
          {company}
          <ExternalLink class:list='size-5'/>
        </a>
        <p class="text-gray-400 leading-relaxed mb-4">
          {exp.map((item) => (
            <ol class="mb-1 text-gray-400">â€¢ {item}</ol>
          ))}
        </p>
        <div class="flex flex-wrap gap-2">
          {
            tecnologies?.map((tech) => (
              <span class='relative inline-block overflow-hidden rounded-full p-[1px]'>
                <span class='absolute inset-[-1000%] animate-[spin_2s_linear_infinite] bg-[conic-gradient(from_90deg_at_50%_50%,#E2CBFF_0%,#393BB2_50%,#E2CBFF_100%)]' />
                <div class='inline-flex h-full w-full cursor-pointer items-center justify-center rounded-full bg-gray-950 px-3 py-1 text-xs font-medium text-gray-50 backdrop-blur-3xl'>
                  {tech}
                </div>
              </span>
            ))
          }
        </div>
      </div>
      )
    })
  }
</div>