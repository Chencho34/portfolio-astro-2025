---
const { frontmatter, content } = Astro.props;
import BaseHead from "../components/BaseHead.astro";
import "../styles/global.css";
---

<html lang="es">
  <head>
    <BaseHead
      title={frontmatter.title}
      description={frontmatter.description || "Blog post description"}
    >
  </head>
  <body class="dark  bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100">
    <main class="max-w-4xl mx-auto p-6">
      <article>
        <header class="mb-8">
          <h1 class="text-4xl font-bold mb-2">{frontmatter.title}</h1>
          {frontmatter.date && (
            <time
              datetime={frontmatter.date}
              class="text-gray-600 dark:text-gray-400 text-sm"
              >{new Date(frontmatter.date).toLocaleDateString('es-MX', {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
              })}</time
            >
          )}
          {frontmatter.author && (
            <p class="text-gray-700 dark:text-gray-300 text-sm mt-1">
              Por {frontmatter.author}
            </p>
          )}
        </header>

        <section class="markdown-content">
          {content}
        </section>
      </article>
    </main>
  </body>
</html>
