---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
import Nav from "../components/Nav.astro";

interface Props {
	title: string
	description?: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<meta name="description" content={Astro.props.description || "Portfolio de Armando Crescencio, desarrollador web fullstack."} />

		<meta property="og:title" content={title} />
		<meta property="og:description" content={Astro.props.description || "Portfolio de Armando Crescencio, desarrollador web fullstack."} />
		<meta property="og:type" content="website" />
		<meta property="og:image" itemprop="image" content={"https://portfolio-astro-2025-ten.vercel.app/previewpage.jpg"} />
		<meta property="og:url" content={Astro.site || "https://portfolio-astro-2025-ten.vercel.app/"} />
		<meta property="og:site_name" content="Armando Crescencio Portfolio">

		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={Astro.props.description || "Portfolio de Armando Crescencio, desarrollador web fullstack."} />
		<meta name="twitter:image" content={"https://portfolio-astro-2025-ten.vercel.app/previewpage.jpg"} />

		<link rel="canonical" href={Astro.url || "https://portfolio-astro-2025-ten.vercel.app/"} />

		<meta name="robots" content="index, follow" />

		<title>{title}</title>
		<ClientRouter>
	</head>
	<body class='bg-gradient-to-br from-[#101010] via-sky-950 to-gray-900 h-dvh bg-no-repeat bg-fixed'>
		<header>
			<Nav />
		</header>
		<main>
			<slot />
		</main>
	</body>
</html>
