---
import { Container, CtaButton, Section, TitleSection } from "../components/ui";
import Badge from "../components/ui/Badge.astro";
---



<body class="bg-fixed bg-no-repeat bg-neutral-950  bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]">
    <Container className="flex flex-col items-center">
  
      <Section className=" mt-24">
        <TitleSection title="Buttons" />
        <CtaButton href="#" variant="primary">
          Primary
        </CtaButton>
        <CtaButton href="#" variant="secondary">
          Secondary
        </CtaButton>
        <CtaButton href="#" variant="accent">
          Acent
        </CtaButton>
        <CtaButton href="#" variant="text">
          Text
        </CtaButton>
        <CtaButton href="#" variant="subtle">
          Subtle
        </CtaButton>
      </Section>
      <Section className="">
        <TitleSection title="Badges" />
          <Badge variant="primary">
            Primary
          </Badge>
          <Badge variant="secondary">
            Secondary
          </Badge>
          <Badge variant="text">
            Text
          </Badge>
          <Badge variant="subtle">
            Subtle
          </Badge>
      </Section>
      <Section className="">
        <TitleSection title="Cards" />

        <div class="h-40 w-40 border group bg-white/5 backdrop-blur-sm border-white/10 hover:bg-white/10 transition-all duration-300 hover:scale-[1.02] hover:shadow-2xl hover:shadow-sky-500/10 rounded-xl overflow-hidden">

        </div>

        <div class='relative h-48 w-48'>
      <div class='absolute top-0 flex w-full justify-center'>
